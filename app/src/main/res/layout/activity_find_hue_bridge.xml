<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	tools:context="biz.huetz.apps.huetastic.FindHueBridgeActivity">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@mipmap/bridge_discovery"
		android:scaleType="centerCrop" />

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">

		<LinearLayout
			android:id="@+id/fullscreen_content_controls"
			style="?metaButtonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical"
			android:background="@color/black_overlay"
			android:padding="12sp"
			tools:ignore="UselessParent">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:keepScreenOn="true"
				android:text="@string/searching_hue_bridges_title"
				android:textColor="@color/brightText"
				android:textSize="24sp"
				android:textStyle="bold" />

			<ProgressBar
				style="?android:attr/progressBarStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:paddingTop="10sp"
				android:id="@+id/progressBar" />

			<TextView
				android:id="@+id/looking_for_bridges_and_found_x_bridges"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:keepScreenOn="true"
				android:text="PLURAL TEXT FILLED DURING RUNTIME"
				android:textColor="@color/brightText"
				android:textSize="12sp"
				android:textStyle="bold" />

		</LinearLayout>
	</FrameLayout>

</FrameLayout>
